<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white_background_day_night</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--Buttons-->
    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/white_rounded_ripple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/primary_rounded_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="BlackButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/black_rounded_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!--EditText-->
    <style name="OutlinedTil" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_primary_selector</item>
        <item name="android:textColorHint">@color/color_primary_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="OutlinedTie" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <!--CheckBox-->
    <style name="DefaultCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/black_day_night</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
