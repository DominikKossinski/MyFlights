<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.kossa.myflights.views.appbars.ShareAppBar
            android:id="@+id/shareAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/shared_flight_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/flightIv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="64dp"
                        android:src="@drawable/ic_flight_rounded"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <pl.kossa.myflights.views.OwnerElementWithTag
                        android:id="@+id/ownerEtw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/flightIv" />

                    <TextView
                        android:id="@+id/sharedUsersTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/flight_details_invited_users"
                        android:textColor="@color/black_day_night"
                        android:textSize="@dimen/middle_text_size"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ownerEtw" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/sharedUsersCg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/sharedUsersTv" />

                    <TextView
                        android:id="@+id/seeAllTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/flight_details_see_all"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/middle_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sharedUsersCg" />


                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/airplaneEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/seeAllTv"
                        app:tagText="@string/airplane" />

                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/departureAirportEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/airplaneEwtv"
                        app:tagText="@string/departure_airport" />

                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/departureRunwayEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/departureAirportEwtv"
                        app:tagText="@string/departure_runway" />

                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/arrivalAirportEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/departureRunwayEwtv"
                        app:tagText="@string/arrival_airport" />

                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/arrivalRunwayEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/arrivalAirportEwtv"
                        app:tagText="@string/arrival_runway" />

                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/departureTimeEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/arrivalRunwayEwtv"
                        app:tagText="@string/departure_time" />


                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/arrivalTimeEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/departureTimeEwtv"
                        app:tagText="@string/arrival_time" />


                    <pl.kossa.myflights.views.ElementWithTagView
                        android:id="@+id/distanceEwtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/arrivalTimeEwtv"
                        app:tagText="@string/flight_distance" />

                    <TextView
                        android:id="@+id/noteTagTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/note"
                        android:textColor="@color/black_day_night"
                        android:textSize="@dimen/middle_text_size"
                        app:layout_constraintTop_toBottomOf="@id/distanceEwtv" />


                    <TextView
                        android:id="@+id/noteTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/ripple_bordered_transparent"
                        android:fontFamily="@font/poppins_light"
                        android:padding="8dp"
                        android:textColor="@color/black_day_night"
                        android:textSize="@dimen/middle_text_size"
                        app:layout_constraintTop_toBottomOf="@id/noteTagTv"
                        tools:text="@string/note" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/editButton"
                        style="@style/BlackButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/noteTv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>