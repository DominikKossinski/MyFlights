<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.kossa.myflights.views.DetailsAppBar
        android:id="@+id/detailsAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/airport" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/airportSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.kossa.myflights.views.ElementWithTagView
                    android:id="@+id/nameEwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tagText="@string/airport_name" />

                <pl.kossa.myflights.views.ElementWithTagView
                    android:id="@+id/cityEwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/nameEwt"
                    app:tagText="@string/airport_city" />

                <pl.kossa.myflights.views.ElementWithTagView
                    android:id="@+id/icaoCodeEwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cityEwt"
                    app:tagText="@string/airport_icao_code" />

                <pl.kossa.myflights.views.ElementWithTagView
                    android:id="@+id/towerFrequencyEwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/icaoCodeEwt"
                    app:tagText="@string/airport_towerFrequency" />


                <pl.kossa.myflights.views.ElementWithTagView
                    android:id="@+id/groundFrequencyEwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/towerFrequencyEwt"
                    app:tagText="@string/airport_groundFrequency" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/runwaysRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/addRunwayButton"
                    app:layout_constraintTop_toBottomOf="@id/groundFrequencyEwt"
                    tools:listitem="@layout/element_runway" />

                <Button
                    android:id="@+id/addRunwayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Add Runway"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>