<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rounded_white">

    <ImageView
        android:id="@+id/runwayIv"
        android:layout_width="@dimen/recycler_view_icon_size"
        android:layout_height="@dimen/recycler_view_icon_size"
        android:layout_margin="16dp"
        android:src="@drawable/ic_runway"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:textColor="@color/black_day_night"
        android:fontFamily="@font/poppins_semibold"
        android:maxLines="1"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintBottom_toTopOf="@id/ilsTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/runwayIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="09L" />


    <TextView
        android:id="@+id/ilsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:textSize="@dimen/middle_text_size"
        android:textColor="@color/black_day_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/runwayIv"
        app:layout_constraintTop_toBottomOf="@id/nameTv"
        tools:text="109.9" />

</androidx.constraintlayout.widget.ConstraintLayout>