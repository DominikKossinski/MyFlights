<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/preLoginFragment">

    <fragment
        android:id="@+id/preLoginFragment"
        android:name="pl.kossa.myflights.fragments.prelogin.PreLoginFragment"
        android:label="PreLoginFragment"
        tools:layout="@layout/fragment_pre_login">

        <action
            android:id="@+id/goToLoginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/goToCreateAccount"
            app:destination="@id/createAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="pl.kossa.myflights.fragments.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">


        <action
            android:id="@+id/goToMainActivity"
            app:destination="@id/mainActivity" />

        <action
            android:id="@+id/goToCreateAccount"
            app:destination="@id/createAccountFragment" />

        <action
            android:id="@+id/goToEmailResend"
            app:destination="@id/emailResendFragment" />
    </fragment>

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="pl.kossa.myflights.fragments.createAccount.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account">

        <action
            android:id="@+id/goToEmailResend"
            app:destination="@id/emailResendFragment" />
    </fragment>

    <fragment
        android:id="@+id/emailResendFragment"
        android:name="pl.kossa.myflights.fragments.emailresend.EmailResendFragment"
        android:label="EmailResendFragment"
        tools:layout="@layout/fragment_email_resend">

        <action
            android:id="@+id/goToLoginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


    <activity
        android:id="@+id/mainActivity"
        android:name="pl.kossa.myflights.activities.main.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main" />
</navigation>